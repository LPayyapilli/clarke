extends home

block main
  #convos
    ul.user-details
      h2 Conversations
      if convos
        if convos.length > 0
          ul
          for convo in convos
            li.conversation_list
              a(href='/conversation/' + convo._id, class='listing-fonts user-details') #{convo.title}
              for hash in newMessages
                if hash.convo === convo._id
                  div New Messages: #{hash.newMessages}
