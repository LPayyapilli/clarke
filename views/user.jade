extends home

block main
  #user
    a(href='/user', class='text-center new-account') All Users
    ul.user-details(style="background: #{otherUser.backgroundColor}")
      li #{otherUser.firstName}
      li #{otherUser.lastName}
      li #{otherUser.username}
      li #{otherUser.email}
      li #{otherUser.dob}
      br
      if statuses
        h3 #{otherUser.firstName}'s Statuses
      for status in statuses
        ul.user-details
          li
            a(href='/status/' + status._id, class='text-center status') #{status.input}
          br
      form(class='form-signin', action='/user/follow/'+ otherUser.username, method='POST')
        input(class='btn btn-lg btn-primary btn-block', type="submit", placeholder='Follow' value="Follow")




