extends home

block statuses
  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        #status
          a(href='/allStatuses', class='text-center status') Statuses
          h1.text-center #{user.firstName}'s Statuses'
            div stati
              ul.user.statuses
                if (statuses.length > 0)
                  for status in statuses
                    a(href='/status' + status._id, class='text-center status')
                    li #{status.input}
                    li #{status.likes}
                    li #{status._creator}
                    li #{status.postedAt}


