extends home

block main
  ul.user-details
    li.userinfo Username: #{user.username}
    li.userinfo Email: #{user.email}
    li.userinfo Age: #{user.age}
    li.userinfo Zip: #{user.zip}
  div.align-center
    form(class='form-signin', action='/auth/patch/user', method='POST')
      input(type='text', name='email', class='form-control', placeholder='Email',autofocus)
      button(class='btn btn-lg btn-primary btn-block', type='submit') Update
      span.clearfix
    form(class='form-signin', action='/auth/patch/user', method='POST')
      input(type='text', name='age', class='form-control', placeholder='Age',autofocus)
      button(class='btn btn-lg btn-primary btn-block', type='submit') Update
      span.clearfix
    form(class='form-signin', action='/auth/patch/user', method='POST')
      input(type='text', name='zip', class='form-control', placeholder='Zip Code',autofocus)
      button(class='btn btn-lg btn-primary btn-block', type='submit') Update
      span.clearfix
    form(class='form-signin', action='/auth/patch/user', method='POST')
      input(type='text', id="backgroundColorField", name='backgroundColor', class='form-control', placeholder='Background Color, image...',autofocus)
      button(class='btn btn-lg btn-primary btn-block', type='submit') Update
      span.clearfix
    a(id='delete_user' class='delete_account_button userinfo') Delete Account




